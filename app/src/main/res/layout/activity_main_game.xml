<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main_game">

    <TextView
            android:text="@string/turnos"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/tv_hola" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" app:fontFamily="sans-serif"
            android:typeface="sans" android:textSize="18sp" android:textColor="@color/textoApp"/>
    <Button
            android:text="@string/tres_turnos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btntres" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_hola" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="108dp" android:layout_marginStart="108dp"
            android:background="@color/btn_color" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
            android:textColor="@color/textoButton" android:shadowColor="@color/design_default_color_primary_dark"/>
    <Button
            android:text="@string/cinco_turnos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btncinco" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btntres" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="108dp" android:layout_marginStart="108dp" android:background="@color/btn_color"
            style="@style/Widget.AppCompat.Button" android:textSize="18sp" android:textColor="@color/textoButton"
            android:shadowColor="@color/design_default_color_primary_dark"/>
    <Button
            android:text="@string/siete_turnos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnsiete" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/btncinco" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="108dp" android:layout_marginStart="108dp" android:background="@color/btn_color"
            style="@style/Widget.AppCompat.Button" android:textSize="18sp" android:textColor="@color/textoButton"
            android:shadowColor="@color/design_default_color_primary_dark"/>
</android.support.constraint.ConstraintLayout>